<!DOCTYPE html>
<html>
	<head>
	  	
	  	<title>Maliavibes</title>
	  	<!--[if lt IE 7]> <html class="no-js ie6 oldie" lang="en"> <![endif]-->
		<!--[if IE 7]>    <html class="no-js ie7 oldie" lang="en"> <![endif]-->
		<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
		<!--[if gt IE 8]><!--> <html class="no-js" lang="en-US"> <!--<![endif]-->

		<!-- DEFAULT META TAGS -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<title>MaliaVibes</title>
		<!-- DEFAULT META TAGS -->

		<%= google_webfonts_link_tag "Montserrat", "Lato", "Droid Serif" %>

		<%= google_webfonts_link_tag 	:montserrat        => [400, 700],
                         				:lato 			   => [300, 400, 700] %>

		<!-- FONTS -->
		<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
		<link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
		<!-- FONTS -->

		<!-- CSS -->
		<%= stylesheet_link_tag "application" %>
		<%= stylesheet_link_tag "pages" %>
		<!-- CSS -->

		<!-- FAVICON -->
		<link rel="shortcut icon" href="<%= image_path("uploads/favicon.ico")%>"/>
		<!-- FAVICON -->

		<!-- JQUERY LIBRARY -->
		<%= javascript_include_tag "pages" %>
		<!-- JQUERY LIBRARY -->

	</head>

	<body class="bordered"> 

		<!-- BORDERS (Don't want any border? Delete the class bordered on the body and this part) -->
		<div id="bodyborder-left"></div>
		<div id="bodyborder-right"></div>
		<div id="bodyborder-top"></div>
		<div id="bodyborder-bottom"></div>
		<!-- BORDERS -->

		<!-- PAGELOADER -->
		<div id="page-loader" class="text-light">
			<div class="page-loader-inner">
		    	<div class="loader-logo-name">
		    		<%= image_tag("uploads/pond-logo.png", alt: "Logo") %>
		    	</div>
				<h6 class="alttitle title-minimal">Loading</h6>
			</div>
		</div>
		<!-- PAGELOADER -->

		<%= yield %>
		<!-- PAGE CONTENT -->

		<%= javascript_include_tag "application" %>

		</body>
</html>